# SECURE Environment Template for CIPC Agent
# Copy this file to .env and fill in your PRODUCTION values.
# NEVER commit actual credentials to git!

# Security Keys (Generate strong random values)
INTERNAL_API_KEY=${INTERNAL_API_KEY}
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Temporal server address for local docker-compose setup
TEMPORAL_ADDRESS=localhost:7233

# Temporal Web UI Port
TEMPORAL_UI_PORT=8233

# Node.js Server Port
NODE_PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/cipc_agent

# OpenAI API Key for AI agents
OPENAI_API_KEY=your-openai-api-key

# WhatsApp/AiSensy Configuration
AISENSY_API_KEY=your-aisensy-api-key
AISENSY_BASE_URL=https://backend.aisensy.com
WHATSAPP_NUMBER=+27871234567
WHATSAPP_BUSINESS_ID=your-whatsapp-business-id

# Payment Configuration
PAYFAST_MERCHANT_ID=your-payfast-merchant-id
PAYFAST_MERCHANT_KEY=your-payfast-merchant-key
PAYFAST_PASSPHRASE=your-payfast-passphrase
PAYFAST_SANDBOX=true

# Application URLs
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Social Media API Keys (for Lead Scout)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# CIPC API Configuration (SECURE - Use environment variables)
CIPC_USERNAME=${CIPC_USERNAME}
CIPC_PASSWORD=${CIPC_PASSWORD}
CIPC_API_URL=https://eservices.cipc.co.za

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
