# This is an example environment file.
# Copy this file to .env and fill in your actual credentials.
# DO NOT COMMIT THE .env FILE.

# Database
# Use this for local development with Docker
DATABASE_URL="postgresql://postgres:postgres@db:5432/cipc_agent"

# Application Settings
NODE_ENV="development"
PORT=3000
CLIENT_URL="http://localhost:5173"

# Security
JWT_SECRET="your_super_secret_random_string_for_jwt"
ENCRYPTION_KEY="your_32_byte_long_random_encryption_key"

# CIPC API Credentials
CIPC_USERNAME=""
CIPC_PASSWORD=""

# WhatsApp Integration
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_WEBHOOK_SECRET=""

# Payment Gateways (fill in only what you use)
PAYFAST_MERCHANT_ID=""
PAYFAST_MERCHANT_KEY=""
PAYFAST_PASSPHRASE=""

PAYSTACK_SECRET_KEY=""
PAYSTACK_PUBLIC_KEY=""

YOCO_SECRET_KEY=""
YOCO_PUBLIC_KEY=""

OZOW_SITE_CODE=""
OZOW_API_KEY=""
OZOW_PRIVATE_KEY=""

# External Services
OPENAI_API_KEY=""
SENTRY_DSN=""

# AiSensy WhatsApp Integration
AISENSY_API_KEY=""
AISENSY_WEBHOOK_SECRET=""

# Mocking (for development)
# Set to true to bypass external APIs during local development
MOCK_WHATSAPP=true
MOCK_CIPC_API=true
MOCK_PAYMENTS=true
