{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "types": ["jest"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "services/**/*.ts", "routes/**/*.ts", "app.ts"],
  "exclude": ["node_modules"]
}
